# ── Supabase ─────────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key   # NEVER expose to client

# ── App ───────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app   # no trailing slash

# ── Nano Banana ───────────────────────────────────────────────────
NANO_BANANA_API_KEY=your-nano-banana-key

# ── Stripe ───────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...       # expose to client if needed
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_STARTER=price_xxx          # $9/mo · 20 images
STRIPE_PRICE_PRO=price_xxx              # $29/mo · 100 images
STRIPE_PRICE_AGENCY=price_xxx           # $79/mo · 500 images

# Top-up one-time payment Price IDs
STRIPE_PRICE_TOPUP_10=price_xxx         # $4.99 · 10 credits
STRIPE_PRICE_TOPUP_50=price_xxx         # $19.99 · 50 credits
STRIPE_PRICE_TOPUP_100=price_xxx        # $34.99 · 100 credits

# ── Internal worker auth ──────────────────────────────────────────
WORKER_SECRET=a-very-long-random-secret-string
